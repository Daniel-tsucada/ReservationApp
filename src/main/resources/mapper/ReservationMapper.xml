<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reservationSystem.domain.repository.ReservationRepository">
    <resultMap id="ReservationResult" type="com.reservationSystem.domain.model.entity.Reservation">
        <result property="id" column="reservation_id" typeHandler="com.reservationSystem.domain.model.valueobject.ReservationIdTypeHandler"/>
        <result property="customerId" column="customer_id"/>
        <result property="serviceId" column="service_id"/>
        <result property="reservationDate" column="reservation_date"/>
        <result property="status" column="status"/>
    </resultMap>

    <insert id="createReservation" parameterType="com.reservationSystem.domain.model.entity.Reservation">
        INSERT INTO reservations (reservation_id, customer_id, service_id, reservation_date, status)
        VALUES (#{id}, #{customerId}, #{serviceId}, #{reservationDate}, #{status})
    </insert>

    <update id="updateReservation" parameterType="com.reservationSystem.domain.model.entity.Reservation">
        UPDATE reservations
        SET customer_id = #{customerId},
            service_id = #{serviceId},
            reservation_date = #{reservationDate},
            status = #{status}
        WHERE reservation_id = #{id}
    </update>

    <delete id="deleteReservation" parameterType="com.reservationSystem.domain.model.valueobject.ReservationId">
        DELETE FROM reservations
        WHERE reservation_id = #{value}
    </delete>

    <select id="findAll" resultMap="ReservationResult">
        SELECT
            r.reservation_id,
            r.customer_id,
            r.service_id,
            r.reservation_date,
            r.status
        FROM reservations r
    </select>
</mapper>